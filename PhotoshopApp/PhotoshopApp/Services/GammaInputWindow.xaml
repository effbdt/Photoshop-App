<Window x:Class="PhotoshopApp.Services.GammaInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoshopApp.Services"
        mc:Ignorable="d"
        Title="Gamma Settings" Height="280" Width="250">
    <StackPanel Margin="10">
        <TextBlock Text="Red gamma:" />
        <Slider x:Name="RedSlider" Minimum="0.1" Maximum="5.0" Value="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="{Binding ElementName=RedSlider, Path=Value, StringFormat=F2}"/>

        <TextBlock Text="Green gamma:" Margin="0,10,0,0"/>
        <Slider x:Name="GreenSlider" Minimum="0.1" Maximum="5.0" Value="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="{Binding ElementName=GreenSlider, Path=Value, StringFormat=F2}"/>

        <TextBlock Text="Blue gamma:" Margin="0,10,0,0"/>
        <Slider x:Name="BlueSlider" Minimum="0.1" Maximum="5.0" Value="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="{Binding ElementName=BlueSlider, Path=Value, StringFormat=F2}"/>


        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="60" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
