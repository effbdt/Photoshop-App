<Window x:Class="PhotoshopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photosop App" Height="600" Width="800" MinHeight="400" MinWidth="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="MyImageControl" Stretch="Uniform"
                   MaxHeight="992" MaxWidth="1768"/>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Bottom" >
            <Button Content="Load Image" Width="120" Height="30" Click="Button_LoadImage_Click" Margin="5"/>
            <ComboBox x:Name="FilterComboBox" Width="200" Height="30" Margin="5"/>
            <Button Content="Apply Filter" Width="120" Height="30" Click="ApplyFilterButton_Click" Margin="5"/>
            <Button Content="Reset" Width="120" Height="30" Click="ResetButton_Click" Margin="5"/>
            <Button Content="Save" Width="120" Height="30" Click="SaveImageButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
