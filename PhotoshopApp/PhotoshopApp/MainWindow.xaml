<Window x:Class="PhotoshopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoshopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="MyImageControl" Width="650" Height="365" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Button x:Name="MyButton" Width="100" Height="30" Content="Upload image" Click="Button_LoadImage_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <ComboBox x:Name="FilterComboBox" Width="200" Height="30"/>
            <Button Content="Apply Filter" Width="100" Height="30" Margin="10,0,0,0" Click="ApplyFilterButton_Click"/>
            <Button Content="Reset" Width="100" Height="30" Margin="10,0,0,0" Click="ResetButton_Click"/>
            <Button Content="Save" Width="100" Height="30" Margin="10,0,0,0" Click="SaveImageButton_Click"/>

        </StackPanel>

    </Grid>
</Window>
